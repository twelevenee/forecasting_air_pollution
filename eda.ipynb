from ucimlrepo import fetch_ucirepo 
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
import numpy as np
%matplotlib inline
  
# fetch dataset 
air_quality = fetch_ucirepo(id=360) 
  
# data (as pandas dataframes) 
X = air_quality.data.features 
y = air_quality.data.targets 
  
# # metadata 
# print(air_quality.metadata) 
  
# # variable information 
# print(air_quality.variables) 

df = pd.concat([X, y], axis=1)
print(df.head())

df.describe()
df.info()

##################################
##### NOx(GT) vs non-targets #####
##################################

x_vars = [
    "PT08.S1(CO)", "PT08.S2(NMHC)", "PT08.S3(NOx)",
    "PT08.S4(NO2)", "PT08.S5(O3)", "T", "RH", "AH"
]

# Pairplot: scatter
pair1 = sns.pairplot(df, x_vars=x_vars, y_vars="NOx(GT)", kind="scatter", plot_kws={"alpha": 0.6})
display(pair1)

# Pairplot: regression lines
pair2 = sns.pairplot(df, x_vars=x_vars, y_vars="NOx(GT)", kind="reg", plot_kws={"line_kws": {"color": "red"}})
display(pair2)

# Pairplot: line plot
plt.figure(figsize=(12, 5))
sns.lineplot(x='Date', y='NOx(GT)', data=df)
plt.xticks(df['Date'][::500], rotation=45)
plt.show()

# Correlation heatmap
corr_matrix = df.corr(numeric_only=True)
feature_corr = corr_matrix[['NOx(GT)']]
fig, ax = plt.subplots(figsize=(10, 8))
sns.heatmap(feature_corr, cmap="coolwarm", annot=False, ax=ax)

# Feature transformations
df["sqrt(PT08.S3(NOx))"] = np.sqrt(df["PT08.S3(NOx)"])
df["PT08.S2(NMHC)**2"] = df["PT08.S2(NMHC)"] ** 2
sns.lmplot(x="sqrt(PT08.S3(NOx))", y="NOx(GT)", data=df)
sns.lmplot(x="PT08.S2(NMHC)**2", y="NOx(GT)", data=df)

